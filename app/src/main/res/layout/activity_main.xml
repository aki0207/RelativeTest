<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:textColor="#ffffff">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_relative_layout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/go_conditions_button"
            android:layout_width="124dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="11dp"
            android:text="検索条件"
            android:textColor="#756F61"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/count_text"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="79dp"
            android:gravity="top"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="検索結果 : 2件"/>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/go_conditions_button"
            android:layout_alignStart="@+id/count_text"
            android:id="@+id/linearLayout">

        <Button
            android:id="@+id/size_mini"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:background="@drawable/minibutton"
            android:text="小"
            android:textSize="9sp"
            android:layout_alignBottom="@+id/go_conditions_button"
            android:layout_alignStart="@+id/count_text" />

        <Button
            android:id="@+id/size_medium"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:background="@drawable/minibutton"
            android:text="中"
            android:textSize="9sp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/size_mini"
            android:layout_alignTop="@id/size_mini" />
      />

        <Button
            android:id="@+id/size_large"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:background="@drawable/minibutton"
            android:text="大"
            android:textSize="9sp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/size_medium"
            android:layout_alignTop="@id/size_medium" />
        />



        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="232dp"
            android:textSize="20sp"
            android:text="こんにちわ世界!" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>